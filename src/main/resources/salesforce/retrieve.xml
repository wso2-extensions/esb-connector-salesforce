<template name="retrieve" xmlns="http://ws.apache.org/ns/synapse">
    <parameter name="fieldList" description="A comma-separated list of the fields you want to retrieve from the records."/>
    <parameter name="objectType" description="The object type of the records."/>
    <parameter name="objectIDS" description="XML representation of the records to retrieve, as shown in the following example."/>
    <parameter name="timeout" description="Timeout duration of the API request."/>
    <sequence>
        <property expression="get-property('operation','salesforce.serviceUrl')"
                  name="uri.var.salesforce.url"/>
        <payloadFactory>
            <format>
                <soapenv:Envelope xmlns:soapenv="http://schemas.xmlsoap.org/soap/envelope/"
                                  xmlns:urn="urn:partner.soap.sforce.com">
                    <soapenv:Header>
                        <urn:SessionHeader>
                            <urn:sessionId>$1</urn:sessionId>
                        </urn:SessionHeader>
                    </soapenv:Header>
                    <soapenv:Body>
                        <urn:retrieve>
                            <urn:fieldList>$2</urn:fieldList>
                            <urn:sObjectType>$3</urn:sObjectType>
                        </urn:retrieve>
                    </soapenv:Body>
                </soapenv:Envelope>
            </format>
            <args>
                <arg expression="get-property('operation','salesforce.sessionId')"/>
                <arg expression="$func:fieldList"/>
                <arg expression="$func:objectType"/>
            </args>
        </payloadFactory>
        <class name="org.wso2.carbon.connector.salesforce.SetupRetriveSobjects"/>
        <enrich>
            <source clone="true" type="body"/>
            <target property="MSG_PAYLOAD" type="property"/>
        </enrich>
        <property name="messageType" scope="axis2" value="text/xml"/>
        <header name="Action" value="urn:partner.soap.sforce.com/Soap/retrieveRequest"/>
        <property value="true" name="FORCE_ERROR_ON_SOAP_FAULT"/>
        <property name="HTTP_METHOD" scope="axis2" value="POST"/>
        <header name="To" expression="$ctx:uri.var.salesforce.url"/>
        <filter source="$ctx:SALESFORCE_BLOCKING" regex="true">
            <then>
                <call blocking="true">
                    <endpoint name="EP" template="org.wso2.carbon.connector.salesforce.salesforceEndPoint">
                        <parameter name="timeout" value="ctx:salesforce.timeout" />
                    </endpoint>
                </call>
            </then>
            <else>
                <call>
                    <endpoint name="EP" template="org.wso2.carbon.connector.salesforce.salesforceEndPoint">
                        <parameter name="timeout" value="ctx:salesforce.timeout" />
                    </endpoint>
                </call>
            </else>
        </filter>
    </sequence>
</template>
